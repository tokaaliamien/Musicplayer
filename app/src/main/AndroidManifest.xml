<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NowPlayingActivity" android:label="@string/playedNow" />
        <activity android:name=".StoreActivity" android:label="@string/store" />
        <activity android:name=".ArtistsActivity" android:label="@string/artists" />
        <activity android:name=".AlbumsActivity" android:label="@string/albums"/>
        <activity android:name=".PlaylistActivity" android:label="@string/playlists"></activity>
    </application>

</manifest>